{
  "compilerOptions": {
    "target": "ES2020",                        
    "module": "CommonJS",                      
    "rootDir": "src",                          
    "outDir": "dist",                          
    "strict": false,
    "esModuleInterop": true,                   
    "experimentalDecorators": true,            
    "emitDecoratorMetadata": true,             
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "types": ["node"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
